<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStation"
    android:background="@drawable/gradient_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainText"
        android:text="Add your Station:"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/nameText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainText"
        android:layout_marginEnd="10dp"
        android:textSize="20dp"
        android:hint="Name:"
        android:padding="20dp"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/nameEntry"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainText"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#50ffffff"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/dieselPrice"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameEntry"
        android:layout_marginEnd="10dp"
        android:hint="Diesel Price:"
        android:padding="20dp"
        android:textColorHint="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/dieselEntry"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameEntry"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#50ffffff"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/petrolPrice"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dieselEntry"
        android:layout_marginEnd="10dp"
        android:hint="Petrol Price:"
        android:padding="20dp"
        android:textColorHint="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/petrolEntry"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dieselEntry"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#50ffffff"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/saveStation"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/petrolEntry"
        android:layout_marginLeft="240dp"
        android:text="Save Station"

        android:textSize="15sp" />


</RelativeLayout>