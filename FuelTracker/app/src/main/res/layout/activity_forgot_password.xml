<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ForgotPassword">


    <TextView
        android:id="@+id/ResetPassword"
        android:layout_width="322dp"
        android:layout_height="100dp"
        android:layout_marginStart="50sp"
        android:layout_marginTop="75sp"
        android:layout_marginEnd="50sp"
        android:layout_marginBottom="20sp"
        android:gravity="center"
        android:text="Reset Your Password"
        android:textColor="#1E90FF"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/EnterEmailText"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:ems="20"
        android:gravity="left"
        android:hint="Enter Your Email Here"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/ResetButton"
        android:layout_width="401dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextTextEmailAddress"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:ems="20"
        android:gravity="center"
        android:text="Reset Password"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/EnterEmailText"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_below="@id/ResetPassword"
        android:layout_marginStart="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="10sp"
        android:gravity="center"
        android:text="Enter your email here to reset your password!"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/BackText"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_below="@id/ResetButton"
        android:layout_marginStart="10sp"
        android:layout_marginTop="25sp"
        android:layout_marginEnd="10sp"
        android:gravity="center"
        android:text="Return To Login Page"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>